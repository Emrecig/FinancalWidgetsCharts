            <button id="theme-toggle">
                <img src="@Url.Content("~/Image/Lua_Crescente_ícones_gratuitos_criados_por_Hartono-removebg-preview.png")" alt="Toggle Theme">
            </button>
        </div>
    </div>

    <header class="page-header">
        <div class="carousel-container">
            <div class="carousel-slide">
                <div class="carousel-item">
                    <div class="header-content">
                        <img src="~/Image/original-5c5b79e5d911f4e54b66251d92c53ae0-removebg.png" alt="Başlık Fotoğrafı" class="header-image">
                        <h1 class="header-title">Money Success</h1>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="header-content">
                        <img src="~/Image/widgets-landing.jpg" alt="Başlık Fotoğrafı" class="header-image">
