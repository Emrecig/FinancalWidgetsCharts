                    </div>
                </div>
                <div class="carousel-item">
                    <div class="header-content">
                        <img src="~/Image/advanced-chart.jpg" alt="Başlık Fotoğrafı" class="header-image">
                        <h1 class="header-title">Money Success</h1>
                    </div>
                </div>
            </div>

            <!-- Kaydırma Butonları -->
